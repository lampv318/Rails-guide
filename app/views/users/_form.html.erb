<%= form_for @user do |f| %>
 <% if @user.errors.any? %>
  <div id = "error_explanation">
    <h2><%= pluralize(@user.errors.count, "error")%>
      prohibited this project from being saved:
    </h2>
    <ul>
      <% @ticket.errors.full_messages.each do  |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
 <% end %>
  <p>
    <%= f.label :name, "Username" %>
    <%= f.text_field :name%>
  </p>
  <p>
    <%= f.label :email, "" %>
    <%= f.text_field :email%>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.text_field :password %> <br/> <br>
  </p>
  <p>
    <%= f.label :password_confirmation %>
    <%= f.text_field :password_confirmation %> <br/> <br>
  </p>
  <%= f.submit "Sign Up"%>
<% end %>
